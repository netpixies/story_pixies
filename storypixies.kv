#:kivy 1.10.1
#: import SimpleTableLayout kivy.garden.SimpleTableLayout
#: import win kivy.core.window
#: import partial functools.partial


<StoryPixiesApp>:
    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<MainMenu>:
    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    rows: 1
    size_hint: (1, None)
    height: 50

    homebutton: homebutton
    librarybutton: librarybutton
    storybutton: storybutton
    creatorbutton: creatorbutton
    ToggleButton:
        id: homebutton
        group: 'mainmenu'
        state: 'down'
        text: 'Home'
        on_press: app.home_screen(self)
        background_normal: 'images/backgrounds/button.png'
        background_down: 'images/backgrounds/3.png'
    ToggleButton:
        id: librarybutton
        group: 'mainmenu'
        text: 'Library'
        on_press: app.library_screen(self)
        background_normal: 'images/backgrounds/button.png'
        background_down: 'images/backgrounds/3.png'
    ToggleButton:
        id: storybutton
        group: 'mainmenu'
        text: 'Story'
        on_press: app.story_screen(self)
        background_normal: 'images/backgrounds/button.png'
        background_down: 'images/backgrounds/3.png'
    ToggleButton:
        id: creatorbutton
        group: 'mainmenu'
        text: 'Creator'
        on_press: app.creator_screen(self)
        background_normal: 'images/backgrounds/button.png'
        background_down: 'images/backgrounds/3.png'


<LibraryButton>:
    libraries: app.libraries
    background_normal: 'images/backgrounds/button.png'
    font_size: 60
    bold: True
    italic: True
    height: 200
    size_hint_y: None
    color: (1,1,1,1)
    on_press: app.set_selected_library(self.text)
    on_release: app.library_screen(self)

<Home>:
    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    libraries: app.libraries
    app: app

    GridLayout:
        id: home_grid
        rows: 1
        spacing: 10
        padding: 10
        RstDocument:
            background_color: (0.98, 0.965, 0.719, 1)
            text: "Welcome to Storypixies!\n---------------\nTo continue, please select a library on the right."
        ScrollView:
            bar_width: 0
            id: library_scroll_view
            size_hint_x: 1
            size_hint_y: None
            size: (win.Window.width,win.Window.height)
            GridLayout:
                id: library_grid
                cols: 1
                size_hint_y: None
                size_hint_x: 1
                spacing: 10
                padding: 10
                scroll_y: slider.value
                on_touch_move: slider.value = self.scroll_y

        Slider:
            size_hint_x: None
            width: root.width*0.2
            id: slider
            min: 0
            max: 1
            orientation: 'vertical'
            value: library_scroll_view.scroll_y
            on_value: library_scroll_view.scroll_y = self.value


<Library>:
    app: app
    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: None

    SimpleTableLayout:
        id: story_layout
        cols: 4
        rows: 8
        padding: 10
        spacing: 10
        Button:
            text: 'Back'
            on_press: story_button.text = app.get_library_object().prev_story()
            on_release: story_button_image.source = app.get_library_object().get_story().get_story_media()
            color: (0.08, 0.32, 0.93, 1)
            background_normal: 'images/backgrounds/button-yellow.png'

        Button:
            colspan: 2
            text: story_button.text
            font_size: 30
            italic: True
            disabled: True
            color: (0.08, 0.32, 0.93, 1)
            background_disabled_normal: 'images/backgrounds/button-yellow.png'

        Button:
            text: 'Next'
            on_press: story_button.text = app.get_library_object().next_story()
            on_release: story_button_image.source = app.get_library_object().get_story().get_story_media()
            color: (0.08, 0.32, 0.93, 1)
            background_normal: 'images/backgrounds/button-yellow.png'

        Button:
            id: story_button
            colspan: 4
            rowspan: 7
            current_story: app.get_library_object().current_story
            size_hint_y: None
            size_hint_x: 1
            font_size: 0
            on_release: app.story_screen(self)
            background_normal: 'images/backgrounds/button-yellow.png'

            Image:
                id: story_button_image
                pos: story_button.pos
                size: story_button.size
                allow_stretch: True
                keep_ratio: True

<SingleLibrary>:
    app: app

<Story>:
    app: app
    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        id: story_book_grid
        cols: 2
        spacing: '8dp'

<StoryBook>:
    app: app


<Creator>:
    app: app
    creator_grid: creator_grid

    canvas.before:
        Color:
            rgba: (0.98, 0.965, 0.719, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 3
        padding: 10
        spacing: 10
        id: creator_grid

<StoryMetaData>:
    app: app
    story_metadata_grid: story_metadata_grid
    GridLayout:
        cols: 1
        rows: 4
        id: story_metadata_grid

<StoryTitle>:
    app: app

<StoryPages>:
    app: app

<SettingButtons>:
    app: app
