#:kivy 1.10.1
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<StoryBase>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'Home'
                on_release: sm.current = 'story_home'
            Button:
                text: 'Library'
                on_release: sm.current = 'story_library'
            Button:
                text: 'Creator'
                on_release: sm.current = 'story_creator'
            Button:
                text: 'Settings'
                on_release: sm.current = 'story_settings'
            Button:
                text: 'Book'
                on_release: sm.current = 'story_book'

        ScreenManager:
            id: sm
            transition: FadeTransition()
            StoryHome:
            StoryLibrary:
            StoryCreator:
            StorySettings:
            StoryBook:

<StoryHome>:
    name: 'story_home'
    BoxLayout:
        Button:
            text: 'Home'
            on_press: root.manager.current = 'story_library'

<StoryCreator>:
    name: 'story_creator'
    BoxLayout:
        Button:
            text: 'Story Creator'



<StoryLibrary>:
    name: 'story_library'
    BoxLayout:
        id: story_lib



<StoryBook>:
    name: 'story_book'
    GridLayout:
        cols: 2
        spacing: '8dp'

        Button:
            text: 'Story Text Goes Here'
        Image:
            id: background
            source: 'images/brush_goats.JPG'

<StorySettings>:
    name: 'story_settings'

    BoxLayout:
        id: settings
        canvas:
            Color:
                rgba: 1.0, 0.5, 0.0, 0.0
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Settings'
            on_release: app.open_settings()

