#:kivy 1.10.1
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<StoryBase>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'Home'
                on_release: sm.current = 'story_home'
            Button:
                text: 'Library'
                on_release: sm.current = 'story_library'
            Button:
                text: 'Creator'
                on_release: sm.current = 'story_creator'
            Button:
                text: 'Settings'
                on_release: sm.current = 'story_settings'
            Button:
                text: 'Book'
                on_release: sm.current = 'story_book'

        ScreenManager:
            id: sm
            transition: FadeTransition()
            StoryFront:
            StoryHome:
            StoryLibrary:
            StoryCreator:
            StorySettings:
            StoryBook:

<StoryFront>:
    title: "Welcome to Story Pixies!"
    Button:
        on_release: root.manager.current = 'story_home'

        Image:
            source: 'images/background.png'
            allow_stretch: True
            size: self.parent.size
            pos: self.parent.pos
        Label:
            text: "Welcome to Story Pixies!"
            size: self.parent.size
            pos: self.parent.pos
            font_size: 60
            bold: True


<StoryHome>:
    name: 'story_home'
    libraries: app.libraries
    selected_library: app.selected_library

    BoxLayout:
        id: story_home_id


<StoryCreator>:
    name: 'story_creator'
    BoxLayout:
        Button:
            text: 'Story Creator'



<StoryLibrary>:
    name: 'story_library'
    selected_library: app.selected_library
    selected_story: app.selected_story

    BoxLayout:
        id: story_lib


<StoryTemplate>:
    name: 'story_template'
    BoxLayout:
        id: story_template

<StoryBook>:
    name: 'story_book'
    id: story_book
    selected_library: app.selected_library
    selected_story: app.selected_story
    template_config: app.template_config
    story_config: app.story_config

    GridLayout:
        id: story_book_grid
        cols: 2
        spacing: '8dp'



<CustomData>:
    name: 'custom_data'
    BoxLayout:
        id: custom_data_box

<StorySettings>:
    name: 'story_settings'

    BoxLayout:
        id: settings
        canvas:
            Color:
                rgba: 1.0, 0.5, 0.0, 0.0
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Settings'
            on_release: app.open_settings()

