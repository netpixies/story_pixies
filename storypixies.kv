#:kivy 1.10.1

<StoryBase>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'Home'
                on_release: sm.current = 'story_home'
            Button:
                text: 'Library'
                on_release: sm.current = 'story_library'
            Button:
                text: 'Creator'
                on_release: sm.current = 'story_creator'
            Button:
                text: 'Settings'
                on_release: sm.current = 'story_settings'
            Button:
                text: 'Book'
                on_release: sm.current = 'story_book'

        ScreenManager:
            id: sm
            StoryHome:
            StoryLibrary:
            StoryCreator:
            StorySettings:
            StoryBook:

<StoryHome>:
    name: 'story_home'
    BoxLayout:
        Button:
            text: 'Home'
            on_press: root.manager.current = 'library'
<StoryCreator>:
    name: 'story_creator'
    BoxLayout:
        Button:
            text: 'Story Creator'



<StoryLibrary>:
    name: 'story_library'
    BoxLayout:
        Button:
            text: 'Story Library'

<StoryBook>:
    name: 'story_book'
    GridLayout:
        cols: 2
        spacing: '8dp'

        Image:
            id: background
            source: 'images/background.png'

<StorySettings>:
    name: 'story_settings'
    Button:
        text: 'Story Settings'

